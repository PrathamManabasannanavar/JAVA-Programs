import java.sql.*;

public class test1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
			
			Class.forName("com.mysql.jdbc.Driver");
			
			Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/employee", "root", null);
			Statement st = con.createStatement();
			
			System.out.print("hi");
			st.executeUpdate("insert into employeedetails values('harish', 45, 3.4)");
			ResultSet rs = st.executeQuery("select * from employeeDetails");			rs.next();
			while(rs.next()) {
				System.out.println(rs.getInt(0)+ " " +  rs.getString(1) + " " + rs.getFloat(2));
			}
		}
		catch(Exception e) {
			e.printStackTrace();
		}
	}
}
